  <div class="mx-auto flex h-16 items-center px-4">
    <!-- Logo Section -->
    <div class="flex items-center">
      <a class="flex items-center space-x-3 mr-8" href="/">
        <!-- Bee Icon -->
        <FlyingBeeIcon className="w-12 h-12" />
        <span class="font-bold text-lg text-foreground">DexBee</span>
      </a>
    </div>

    <!-- Navigation -->
    <nav class="hidden md:flex items-center space-x-8 flex-1">
      {navItems.map(item => (
        <a
          href={item.href}
          class={cn('text-sm font-medium transition-colors hover:text-foreground border-b-1 border-transparent', isActive(item.pattern)
              ? 'text-foreground border-primary'
              : 'text-muted-foreground')}
        >
          {item.label}
        </a>
      ))}
    </nav>

    <!-- Right Side Actions -->
    <div class="flex items-center space-x-4">
