---
import { cn } from '@/utils/cn'
import FlyingBeeIcon from '../astro/FlyingBeeIcon.astro'
import { ThemeToggle } from '../react/ThemeToggle'

export interface Props {
  currentPath?: string
}

const { currentPath = '' } = Astro.props

// Navigation items with active state logic
const navItems = [
  { href: '/docs/', label: 'Docs', pattern: /^\/docs\/?$/ },
  { href: '/docs/api-database', label: 'API', pattern: /^\/docs\/api/ },
  { href: '/docs/examples', label: 'Examples', pattern: /^\/docs\/examples/ },
]

const isActive = (pattern: RegExp) => pattern.test(currentPath);
---

